{
    "name": "reqstool-vscode-extension",
    "displayName": "reqstool-vscode-extension",
    "description": "Show a tooltip when hovering a requirement",
    "version": "0.0.3",
    "repository": {
        "type": "git",
        "url": "https://github.com/Luftfartsverket/reqstool-vscode-extension"
    },
    "engines": {
        "vscode": "^1.54.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:java",
        "onLanguage:python"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "reqstool-vscode-extension.run-reqstool",
                "title": "Reqstool: Update"
            }
        ],
        "configuration": [
            {
                "type": "object",
                "properties": {
                    "reqstool.entryPointDir": {
                        "type": "string",
                        "description": "Reqstool: Set entry point"
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "lint": "eslint src --ext ts",
        "test": "jest",
        "test-with-report": "jest --ci --reporters=default --reporters=jest-junit",
        "build": "vsce package"
    },
    "devDependencies": {
        "@jest/globals": "^29.7.0",
        "@types/js-yaml": "^4.0.7",
        "@types/mocha": "^10.0.1",
        "@types/node": "20.x",
        "@types/vscode": "^1.54.0",
        "@typescript-eslint/eslint-plugin": "^7.0.1",
        "@typescript-eslint/parser": "^7.0.2",
        "@vscode/test-electron": "^2.3.4",
        "@vscode/vsce": "^2.22.0",
        "eslint": "^8.47.0",
        "glob": "^10.3.9",
        "jest": "^29.7.0",
        "jest-junit": "^16.0.0",
        "ts-jest": "^29.1.1",
        "ts-loader": "^9.4.4",
        "typescript": "^5.1.6",
        "webpack": "^5.90.2",
        "webpack-cli": "^5.1.4"
    }
}